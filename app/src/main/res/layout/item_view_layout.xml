    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/good_item_background">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/good_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/GoodItemCheckBoxStyle"/>
                <ImageView
                    android:id="@+id/good_image"
                    android:layout_width="120dp"
                    android:layout_height="90dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginHorizontal="10dp"
                    android:text="商品名商品名商品名商品名商品名商品名商品名"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/transparent_light_gray"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:id="@+id/good_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="商品规格商品规格商品规格"
                        android:textColor="@color/dark_gray"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="2dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/app_orange"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/good_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49.9"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="@color/app_orange"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|bottom"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/good_amount_background">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="×"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/good_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="15dp" />
                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


</LinearLayout>
